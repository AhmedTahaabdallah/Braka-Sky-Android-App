<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigationheader_my_navheader_allcont_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/headercolor"
    tools:ignore="MissingDefaultResource"
    android:id="@+id/my_navheader_allcont">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_profile_image"
            android:layout_width="@dimen/navigationheader_nav_profile_image_width"
            android:layout_height="@dimen/navigationheader_nav_profile_image_height"
            android:layout_marginTop="@dimen/navigationheader_nav_profile_image_margintop"
            android:src="@drawable/profile"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="@dimen/navigationheader_nav_profile_image_border_width"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/nav_user_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_profile_image"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/navigationheader_nav_user_full_name_margintop"

            android:text="username"
            android:textAlignment="center"
            android:textColor="@color/textheadercolor"
            android:textSize="@dimen/navigationheader_nav_user_full_name_textsize"
            android:textStyle="bold"

            tools:ignore="UnknownId" />
    </LinearLayout>
</RelativeLayout>