<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/allhomecommentslayout_all_hhomee_comments_layout_cont_margin"
        android:id="@+id/all_hhomee_comments_layout_cont"
        android:background="@drawable/maincomments_border">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/allhomecommentslayout_all_hhomee_comments_layout_user_info_cont_margintop"
            android:layout_marginStart="@dimen/allhomecommentslayout_all_hhomee_comments_layout_user_info_cont_marginstart"
            android:layout_marginEnd="@dimen/allhomecommentslayout_all_hhomee_comments_layout_user_info_cont_marginend"
            android:id="@+id/all_hhomee_comments_layout_user_info_cont"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/allhomecommentslayout_all_users_profile_image_home_comment_width"
                android:layout_height="@dimen/allhomecommentslayout_all_users_profile_image_home_comment_height"
                android:id="@+id/all_users_profile_image_home_comment"
                android:layout_marginStart="@dimen/allhomecommentslayout_all_users_profile_image_home_comment_marginstart"
                android:layout_marginEnd="@dimen/allhomecommentslayout_all_users_profile_image_home_comment_marginend"
                android:src="@drawable/profile"
                android:layout_marginTop="@dimen/allhomecommentslayout_all_users_profile_image_home_comment_margintop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/allhomecommentslayout_all_hom_comm_user_in_co_marginend"
                android:layout_marginStart="@dimen/allhomecommentslayout_all_hom_comm_user_in_co_marginstart"
                android:layout_marginBottom="@dimen/allhomecommentslayout_all_hom_comm_user_in_co_marginbottom"
                android:layout_marginTop="@dimen/allhomecommentslayout_all_hom_comm_user_in_co_margintop"
                android:padding="@dimen/allhomecommentslayout_all_hom_comm_user_in_co_padding"
                android:id="@+id/all_hom_comm_user_in_co"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/allhomecommentslayout_all_hom_comm_user_in_co_continer_padding"
                    android:id="@+id/all_hom_comm_user_in_co_continer">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/allhomecommentslayout_all_users_profile_full_name_home_comment_weight"
                        android:id="@+id/all_users_profile_full_name_home_comment"
                        android:text="@string/comments_layout_full_name"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:textSize="@dimen/allhomecommentslayout_all_users_profile_full_name_home_comment_textsize"
                        android:layout_marginBottom="@dimen/allhomecommentslayout_all_users_profile_full_name_home_comment_marginbottom"
                        android:textDirection="locale"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/allhomecommentslayout_edit_home_comment_button_allcomments_height"
                        android:layout_weight="@dimen/allhomecommentslayout_edit_home_comment_button_allcomments_weight"
                        android:background="@drawable/button_edit_comment"
                        android:id="@+id/edit_home_comment_button_allcomments"
                        android:text="@string/click_post_page_edit_button"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/allhomecommentslayout_edit_home_comment_button_allcomments_textsize"
                        android:textStyle="bold"
                        android:paddingTop="0dp"

                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/allhomecommentslayout_delete_home_comment_button_allcomments_height"
                        android:layout_weight="@dimen/allhomecommentslayout_delete_home_comment_button_allcomments_weight"
                        android:background="@drawable/button_delete_comment"
                        android:id="@+id/delete_home_comment_button_allcomments"
                        android:text="@string/click_post_page_delete_button"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_light"
                        android:textSize="@dimen/allhomecommentslayout_delete_home_comment_button_allcomments_textsize"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/allhomecommentslayout_delete_home_comment_button_allcomments_marginstart"
                        android:paddingTop="0dp"
                        />
                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/all_home_comments_layout_date_cont"
                    android:padding="@dimen/allhomecommentslayout_all_home_comments_layout_date_cont_padding">

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/all_users_profile_comment_date"
                        android:text="@string/comments_layout_datetime"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        /> -->
                    <ImageButton
                        android:layout_width="@dimen/allhomecommentslayout_post_comment_friend_sign_width"
                        android:layout_height="@dimen/allhomecommentslayout_post_comment_friend_sign_height"
                        android:id="@+id/post_comment_friend_sign"
                        android:src="@drawable/friend_singn"
                        android:layout_marginEnd="@dimen/allhomecommentslayout_post_comment_friend_sign_marginend"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_comment_date"
                        android:text="@string/all_post_layout_date"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/allhomecommentslayout_home_comment_date_textsize"
                        android:layout_marginTop="@dimen/allhomecommentslayout_home_comment_date_margintop"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_comment_time"
                        android:text="@string/all_post_layout_time"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:visibility="gone"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_comment_desc"
            android:text="@string/comments_layout_comment"
            android:layout_marginStart="@dimen/allhomecommentslayout_home_comment_desc_marginnstart"
            android:layout_marginEnd="@dimen/allhomecommentslayout_home_comment_desc_marginend"
            android:padding="@dimen/allhomecommentslayout_home_comment_desc_padding"
            android:textSize="@dimen/allhomecommentslayout_home_comment_desc_textsize"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/allhomecommentslayout_home_comment_desc_margintop"
            android:layout_marginBottom="@dimen/allhomecommentslayout_home_comment_desc_marginbottom"
            android:textDirection="locale"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/allhomecommentslayout_like_home_comment_section_marginstart"
            android:layout_marginEnd="@dimen/allhomecommentslayout_like_home_comment_section_marginend"
            android:layout_marginBottom="@dimen/allhomecommentslayout_like_home_comment_section_marginbottom"
            android:padding="@dimen/allhomecommentslayout_like_home_comment_section_padding"
            android:id="@+id/like_home_comment_section">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/allhomecommentslayout_like_button_home_comment_height"
                android:layout_weight="@dimen/allhomecommentslayout_like_button_home_comment_weight"
                android:id="@+id/like_button_home_comment"
                android:src="@drawable/dislike"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/allhomecommentslayout_display_no_of_likes_home_comments_weight"
                android:id="@+id/display_no_of_likes_home_comments"
                android:text="@string/all_post_layout_display_no_of_likes"
                android:padding="@dimen/allhomecommentslayout_display_no_of_likes_home_comments_padding"
                android:textColor="@android:color/black"
                android:textSize="@dimen/allhomecommentslayout_display_no_of_likes_home_comments_textsize"
                android:textStyle="bold"

                />
            <!-- <ImageButton
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/comment_button_home_comments"
                 android:src="@drawable/comment"
                 android:baselineAlignBottom="false"
                 />-->
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="@dimen/allhomecommentslayout_display_no_of_home_comment_comments_weight"
                 android:id="@+id/display_no_of_home_comment_comments"
                 android:text="@string/all_post_layout_display_no_of_replays"
                 android:padding="@dimen/allhomecommentslayout_display_no_of_home_comment_comments_padding"
                 android:textColor="@android:color/black"
                 android:textSize="@dimen/allhomecommentslayout_display_no_of_home_comment_comments_textsize"
                 android:textStyle="bold"
                 />
         </LinearLayout>

     </LinearLayout>
 </RelativeLayout>