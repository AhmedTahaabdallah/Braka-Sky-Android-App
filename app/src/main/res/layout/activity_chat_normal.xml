<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    tools:ignore="MissingDefaultResource"
    android:id="@+id/main_chat_root">
    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/chat_bar_layout"></include>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chat_bar_layout"
        android:layout_above="@+id/my_linear_layOut"
        android:id="@+id/messages_list_users"
        android:layout_marginTop="@dimen/chat_messages_list_users_margintop"
        android:layout_marginEnd="@dimen/chat_messages_list_users_marginend"
        android:layout_marginStart="@dimen/chat_messages_list_users_marginstart"
        android:background="@color/messagesbg"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@android:color/holo_red_dark"
        android:scrollbarSize="@dimen/myscroolbar_size"
        android:layoutDirection="ltr"
        ></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_linear_layOut"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:layout_marginTop="@dimen/chat_my_linear_layOut_users_margintop"
        android:layout_marginStart="@dimen/chat_my_linear_layOut_users_marginstart"
        android:layout_marginEnd="@dimen/chat_my_linear_layOut_users_marginend"
        android:layout_marginBottom="@dimen/chat_my_linear_layOut_users_marginbottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layoutDirection="ltr"
        >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_send_image_file_button_chat_hieht"
            android:layout_weight="2"
            android:id="@+id/send_image_file_button_chat"
            android:src="@drawable/ic_select_image"
            android:layout_marginTop="@dimen/chat_send_image_file_button_chat_margintop"
            />
        <EditText
            android:id="@+id/input_message_chat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_input_message_chat_hieht"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:padding="@dimen/chat_input_message_chat_padding"
            android:hint="@string/chat_message_text"
            android:layout_marginEnd="@dimen/chat_input_message_chat_marginend"
            android:layout_marginStart="@dimen/chat_input_message_chat_marginstart"
            android:background="@drawable/inputs"
            android:layout_marginTop="@dimen/chat_input_message_chat_margintop"
            android:textSize="@dimen/chat_input_message_chat_textsize"
            android:textDirection="locale"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_send_message_button_chat_hieht"
            android:layout_weight="2"
            android:id="@+id/send_message_button_chat"
            android:src="@drawable/ic_send_message"
            android:layout_marginTop="@dimen/chat_send_message_button_chat_margintop"/>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chat_adviewsend"
        android:layout_width="@dimen/adview_chatsend_width"
        android:layout_height="@dimen/adview_chatsend_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1847297911542220/2987165732"
        ></com.google.android.gms.ads.AdView>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chat_adviewrecived"
        android:layout_width="@dimen/adview_chatrecived_width"
        android:layout_height="@dimen/adview_chatrecived_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1847297911542220/2987165732"
        ></com.google.android.gms.ads.AdView>
</RelativeLayout>