<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource"
    android:id="@+id/messages_layo_allcont"
    android:padding="@dimen/messagelayout_messages_layo_allcont_padding">

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_display_date"
        android:text="@string/message_layout_date"
        android:layout_centerHorizontal="true"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/message_date_bg"
        android:textColor="@android:color/background_light"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_display_date">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/messagelayout_message_profile_image_width"
            android:layout_height="@dimen/messagelayout_message_profile_image_height"
            android:id="@+id/message_profile_image"
            android:src="@drawable/profile"
            android:layout_marginTop="@dimen/messagelayout_message_profile_image_margintop"
            android:layout_marginEnd="@dimen/messagelayout_message_profile_image_marginend"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/message_profile_image">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reciver_message_date"
                android:layout_marginTop="@dimen/messagelayout_reciver_message_date_margintop"
                android:layout_marginStart="@dimen/messagelayout_reciver_message_date_marginstart"
                android:layout_marginEnd="@dimen/messagelayout_reciver_message_date_marginend"
                android:layout_marginBottom="@dimen/messagelayout_reciver_message_date_marginbottom"
                android:background="@color/messagedatebg_reciver"
                android:text="@string/message_layout_reciver_time"
                android:textColor="@android:color/background_light"
                android:padding="@dimen/messagelayout_reciver_message_date_padding"
                android:textStyle="bold"
                android:textSize="@dimen/messagelayout_reciver_message_date_textsize"
                android:textDirection="locale"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reciver_message_text"
                android:layout_marginStart="@dimen/messagelayout_reciver_message_text_marginstart"
                android:layout_marginEnd="@dimen/messagelayout_reciver_message_text_marginend"
                android:background="@drawable/reciver_message_text_background"
                android:text="@string/message_layout_reciver_text"
                android:textColor="@android:color/background_light"
                android:padding="@dimen/messagelayout_reciver_message_text_padding"
                android:textStyle="bold"
                android:textSize="@dimen/messagelayout_reciver_message_text_textsize"
                android:textDirection="locale"/>
            <ImageView
                android:layout_width="@dimen/messagelayout_reciver_message_image_width"
                android:layout_height="@dimen/messagelayout_reciver_message_image_height"
                android:id="@+id/reciver_message_image"
                android:layout_marginStart="@dimen/messagelayout_reciver_message_image_marginstart"
                android:layout_marginEnd="@dimen/messagelayout_reciver_message_image_marginend"
                android:layout_gravity="left"
                />
            <!--<TextView
                android:layout_width="@dimen/messagelayout_reciver_message_image_download_width"
                android:layout_height="wrap_content"
                android:id="@+id/reciver_message_image_download"
                android:textSize="@dimen/messagelayout_reciver_message_image_download_textsize"
                android:textDirection="locale"
                android:textStyle="bold"
                android:background="@color/messagedatebg_reciver"
                android:textColor="@android:color/background_light"
                android:text="@string/message_layout_reciver_image_download"
                android:layout_marginStart="@dimen/messagelayout_reciver_message_image_download_marginstart"
                android:layout_marginEnd="@dimen/messagelayout_reciver_message_image_download_marginend"
                android:layout_gravity="left"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/messagelayout_reciver_message_image_download_margintop"
                android:padding="@dimen/messagelayout_reciver_message_image_download_padding"/>-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:id="@+id/sender_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/messagelayout_sender_message_date_margintop"
                android:layout_marginStart="@dimen/messagelayout_sender_message_date_marginstart"
                android:layout_marginEnd="@dimen/messagelayout_sender_message_date_marginend"
                android:layout_marginBottom="@dimen/messagelayout_sender_message_date_marginbottom"
                android:background="@color/messagedatebg_sender"
                android:padding="@dimen/messagelayout_sender_message_date_padding"
                android:text="@string/message_layout_sender_time"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/messagelayout_sender_message_date_textsize"
                android:textStyle="bold"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sender_message_text"
                android:layout_marginStart="@dimen/messagelayout_sender_message_text_marginstart"
                android:layout_marginEnd="@dimen/messagelayout_sender_message_text_marginend"
                android:background="@drawable/sender_message_text_background"
                android:text="@string/message_layout_sender_text"
                android:textColor="@android:color/background_light"
                android:padding="@dimen/messagelayout_sender_message_text_padding"
                android:textStyle="bold"
                android:textSize="@dimen/messagelayout_sender_message_text_textsize"
                android:layout_gravity="right"/>
            <ImageView
                android:layout_width="@dimen/messagelayout_sender_message_image_width"
                android:layout_height="@dimen/messagelayout_sender_message_image_height"
                android:id="@+id/sender_message_image"
                android:layout_marginStart="@dimen/messagelayout_sender_message_image_marginstart"
                android:layout_marginEnd="@dimen/messagelayout_sender_message_image_marginend"
                android:layout_gravity="right"
                />

            <!--<TextView
                android:layout_width="@dimen/messagelayout_sender_message_image_download_width"
                android:layout_height="wrap_content"
                android:id="@+id/sender_message_image_download"
                android:textSize="@dimen/messagelayout_sender_message_image_download_textsize"
                android:textDirection="locale"
                android:textStyle="bold"
                android:background="@color/messagedatebg_sender"
                android:textColor="@android:color/background_light"
                android:text="@string/message_layout_reciver_image_download"
                android:layout_marginStart="@dimen/messagelayout_sender_message_image_download_marginstart"
                android:layout_marginEnd="@dimen/messagelayout_sender_message_image_download_marginend"
                android:layout_gravity="right"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/messagelayout_sender_message_image_download_margintop"
                android:padding="@dimen/messagelayout_sender_message_image_download_padding"/>-->
        </LinearLayout>
    <!--</LinearLayout>-->

    </RelativeLayout>

</RelativeLayout>