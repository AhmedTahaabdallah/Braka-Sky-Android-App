<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity"
    tools:ignore="MissingDefaultResource"
    android:background="@color/colorprofile"
    >

    <include layout="@layout/app_bar_layout"
        android:id="@+id/update_post_page_toolbar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/update_post_page_toolbar"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/myscrollbar"
        android:scrollbarSize="@dimen/myscroolbar_size"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/addpost_main_addpost_root_padding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/main_addpost_root">
            <ImageButton
                android:id="@+id/select_post_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/addpost_select_post_image_height"
                android:scaleType="fitCenter"
                android:src="@drawable/select_image"
                />
            <EditText
                android:id="@+id/post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_marginTop="@dimen/addpost_post_description_marginTop"
                android:layout_below="@+id/select_post_image"
                android:hint="@string/post_text_post"
                android:background="@drawable/inputs"
                android:textSize="@dimen/addpost_post_description_textsize"
                android:padding="@dimen/addpost_post_description_padding"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_description"
                android:orientation="vertical">
                <Button
                    android:id="@+id/share_post_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/addpost_share_post_button_margintop"
                    android:layout_marginBottom="@dimen/addpost_share_post_button_marginbottom"
                    android:background="@drawable/button"
                    android:paddingEnd="@dimen/addpost_share_post_button_paddingend"
                    android:paddingStart="@dimen/addpost_share_post_button_paddingstart"
                    android:text="@string/post_share_button_post"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/addpost_share_post_button_textsize"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>