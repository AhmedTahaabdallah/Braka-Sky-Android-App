<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    tools:context=".FriendsActivity"

    android:background="@color/colorprofile"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/all_friends_count_online"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/all_friends_textsimple"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/friends_all_friends_textsimple_textsize"
        android:textStyle="bold"
        android:padding="@dimen/friends_all_friends_textsimple_padding"
        android:layout_marginTop="@dimen/friends_all_friends_textsimple_margintop"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:text="@string/friends_text_view_friends"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/friends_list"
        android:layout_below="@+id/all_friends_textsimple"
        android:layout_margin="@dimen/friends_friends_list_margin"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/myscrollbar"
        android:scrollbarSize="@dimen/myscroolbar_size"
        >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>